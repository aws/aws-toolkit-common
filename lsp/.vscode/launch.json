// A launch configuration that compiles the extension and then opens it inside a new window
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to AWS Documents Language Server",
            "type": "node",
            "request": "attach",
            "port": 6012, // Hard defined in the vscode client activation.ts
            "outFiles": ["${workspaceFolder}/out/src/server/**/*.js", "${workspaceFolder}/out/src/service/**/*.js"],
            "restart": {
                "maxAttempts": 10,
                "delay": 1000
            }
        },
        {
            "name": "Debug BuildSpec Server in VSCode",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}/client/vscode"],
            "outFiles": ["${workspaceFolder}/client/vscode/out/**/*.js"],
            "env": {
                "LSP_SERVER": "${workspaceFolder}/app/aws-lsp-buildspec-binary/out/index.js"
            },
            "preLaunchTask": "npm: compile"
        },
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "watch",
            "name": "Unit Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["${workspaceRoot}/out/test/unit/**/*.js"],
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "watch",
            "name": "Unit Tests (Current File)",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["${workspaceRoot}/out/test/unit/**/${fileBasenameNoExtension}.js"],
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "watch",
            "name": "Integration Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["${workspaceRoot}/out/test/integration/**/*.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "watch",
            "name": "Integration Tests (Current File)",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["${workspaceRoot}/out/test/integration/**/${fileBasenameNoExtension}.js"]
        }
    ],
    "compounds": [
        {
            "name": "Launch as VSCode Extension + Debugging",
            "configurations": ["Debug BuildSpec Server in VSCode", "Attach to AWS Documents Language Server"]
        }
    ]
}
