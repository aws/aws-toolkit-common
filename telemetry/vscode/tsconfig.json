
{
    "compilerOptions": {
        "baseUrl": ".",
        "incremental": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "lib",
        "sourceMap": true,
        "moduleResolution": "node",
        "rootDirs": ["src", "third-party"],
        "resolveJsonModule": true,
        "strict": true,
        "noUnusedLocals": true
	},
    "exclude": ["node_modules"]
}
