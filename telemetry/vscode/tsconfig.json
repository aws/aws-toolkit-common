
{
    "compilerOptions": {
        "baseUrl": ".",
        "incremental": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "lib",
        "sourceMap": true,
        "moduleResolution": "node",
        "rootDirs": ["src"],
        "resolveJsonModule": true,
        "strict": true,
        "noUnusedLocals": true,
	},
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
